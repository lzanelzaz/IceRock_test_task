<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.IceRock_test_task" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/status_bar</item>

        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="Theme.IceRock_test_task.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.IceRock_test_task</item>
    </style>

    <style name="Widget.IceRock_test_task.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.IceRock_test_task.TopAppBar</item>
    </style>

    <style name="ThemeOverlay.IceRock_test_task.TopAppBar" parent="">
        <item name="colorPrimary">@color/status_bar</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Dialog.Alert">
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>